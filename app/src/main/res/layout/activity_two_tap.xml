<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwoTapActivity">

    <TextView
        android:id="@+id/twoTapInstruction"
        android:layout_width="357dp"
        android:layout_height="133dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="41dp"
        android:text="Klikaj na zmiane palcem wskazującym w lewą część ekranu a palcem w środkowym prawą około 20 razy."
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811" />

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="436dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twoTapInstruction" />

    <TextView
        android:id="@+id/twoTapInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <ImageView
        android:id="@+id/leftAim"
        android:layout_width="115dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/aim"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="318dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/rightAim"
        android:layout_width="115dp"
        android:layout_height="115dp"
        app:srcCompat="@drawable/aim"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="318dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" />

</android.support.constraint.ConstraintLayout>